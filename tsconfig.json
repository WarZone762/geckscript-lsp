{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "es2022",
            "DOM"
        ],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
